public class LargestAverage{
  public static void main(Stringp[] args){
    double[][] arr = {{1.5,2.3,5.7},{12.5,-50,25}};
    System.out.println(largestAverage(arr));
    
  }
  publc static double[] largestAverage(double[][] arr){
    double largestAve = 0;
    for(int i=0;i<arr.length;i++){
      for(int j=0;j<arr[i].length;j++){
        int sumOfArrayI = 0;
        sumOfArrayI += arr[i][j];
      }
      aveOfArrayI = summOfArrayI/arr[i].length;
      if(aveOfArrayI>largestAve){
        largestAve = aveOfArrayI;
        largestArr = arr[i];
      }
    }
    return largestArr;
  }
}       
        
                                  
    