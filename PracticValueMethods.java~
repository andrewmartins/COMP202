public class PracticValueMethods {
  public static void main(String[] args) {
    // test cube
    System.out.println(cube(2.0));
    System.out.println(cube(-3.0));
    // test volume sphere
    System.out.println(volumeSphere(4.0));
  }
  
  // a method that computes the volume of a sphere given its radius (as Input)
  /*
   * volumeSphere(3.0) --> 113.097335 
   */ 
  public static double volumeSphere(double radius) {
   // (4/3)*pi*radius^3
    double volume = 4.0/3.0*Math.PI*cube(radius);
    return volume;
  }
  
  // a method that computes the cube of a number received as input 
  /*
   * cube (2.0) --> 8.0
   * cube (-3.0) --> -27.0
   */
  public static double cube(double x) {
    return Math.pow(x, 3.0);
    
  }
}